{% set currentPath = path(app.request.get('_route'),
    app.request.get('_route_params')) %}

<div class="ui large top fixed hidden menu">
    <div class="ui container">
        <a class="{% if currentPath is same as(path('home')) %}active {% endif %}item" href="{{ path('home') }}">Accueil</a>
{#        <a class="{% if currentPath is same as(path('presentation')) %}active {% endif %}item" href="{{ path('presentation') }}">C'est quoi ?</a>#}
{#        <a class="item">Plans</a>#}
        <div class="right menu">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="ui labeled icon button blue" href="{{ path('dashboard') }}"><i class="columns icon"></i>{{ app.user.name }}</a>
                <a class="ui icon button black" href="{{ path('logout') }}"><i class="sign-out icon"></i></a>
            {% else %}
                <div class="item"><a class="ui button" href="{{ path('login') }}">Connexion</a></div>
                <div class="item"><a class="ui primary button" href="{{ path('register') }}">Inscription</a></div>
            {% endif %}
        </div>
    </div>
</div>

