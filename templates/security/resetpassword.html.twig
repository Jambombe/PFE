{% extends 'home/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #main {
            min-height: 100vh;
        }
    </style>
{% endblock stylesheets %}

{% block body %}

    <div class="pusher">
        <div class="ui inverted vertical masthead center aligned segment" id="main">

            {% include 'home/includes/inbody-menu.html.twig' %}

            <div class="ui text container">
                <h1 class="ui inverted header">Changer de mot de passe</h1>
                <br>
                {% if error is defined %}
                    {% if error.code == 0 %}
                        <div class="error-msg">Identifiants incorrects</div>
                        <br>
                    {% endif %}
                {% endif %}

                {{ form_start(passwordForm, {attr: {class: 'ui form'}}) }}

                    {% if form_errors(passwordForm) %}
                        <div class="error-msg">
                            {{ form_errors(registerForm) }}
                        </div>
                    {% endif %}

                    <div class="ui fluid input">
                        {{ form_row(passwordForm.plainPassword) }}
                    </div>
                    <br/>
                    <button type="submit" class="ui inverted green button huge">Confirmer</button>
                {{ form_end(passwordForm) }}

            </div>
        </div>
    </div>

{% endblock body %}